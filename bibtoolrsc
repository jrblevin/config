# BibTool default resource file, used primarily for printing
# references from the master bib file.
#
# Jason Blevins <jrblevin@sdf.lonestar.org>
# Durham, August 26, 2005

# Words to ignore for key generation
ignored.word		= "on"
ignored.word 		= "the"
ignored.word 		= "a"
ignored.word 		= "an"
ignored.word 		= "if"

quiet                   = on

expand.macros           = on
print.all.strings	= off
fmt.et.al 	  	= {}
print.align.key   	= 0
sort 			= on
print.use.tab 		= off
print.align.string      = 20
print.align             = 17
print.comma.at.end      = on
print.line.length       = 77

# Remove extraneous fields
delete.field {keywords}
delete.field {doi}
delete.field {url}

# Remove duplicate entries
check.double 		= on
check.double.delete 	= on

# Key format
key.generation 		= on
key.number.separator 	= {}
key.base 		= {digit}
key.format 		= {{%s(key) # %-1p(author) # %-1p(editor) # %-5.1W(institution) # %-5.1W(organization) } %2d(year)%-T(title)}

# Include my main bibtex database by default
input {/home/jrblevin/.bib/research.bib}

