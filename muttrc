# ~/.muttrc: Main Mutt configuration.                     -*-muttrc-*-
#
# Jason Blevins <jrblevin@sdf.lonestar.org>
# Durham, January 14, 2006

# Identity
# --------

set envelope_from

# My displayed name.
set realname="Jason Blevins"

# Addresses at which I receive email.
alternates "jrb11@duke.edu|jrblevin@sdf.lonestar.org|jrblevin@gmail.com"

# Sutomatically verify signed messages.
set crypt_verify_sig=yes


# Profiles
# --------

# Load the default profile.
source ~/config/common/mutt/profile.duke

# Macros to invoke other profiles (with Emacs-style C-p prefix).
macro index "\Cpd" ":source ~/config/common/mutt/profile.duke\n" "Load profile: duke"
macro index "\Cps" ":source ~/config/common/mutt/profile.sdf\n" "Load profile: sdf"


# Mailboxes
# ---------

# Gmail Inbox
set spoolfile="imaps://jrblevin@mail.freeshell.org/"

# Gmail folder prefix
set folder="imaps://jrblevin@mail.freeshell.org/mail/"

# Gmail Sent Mail folder
set record="=sent"

# Gmail Drafts folder
set postponed="=drafts"

# Don't remove read mail from inbox.
set mbox="="


# Outgoing Headers
# ----------------

# Allow me to edit the headers when composing.
set edit_headers=yes

# Allow mutt to generate From headers.
set use_from=yes

# Set sendmail sender -f flag.
set envelope_from=yes

# Include `my_hdr' lines in outgoing messages.
set hdrs

# Help people find my PGP key.
my_hdr X-PGP-Key: http://jblevins.org/jrblevin.asc



# External Programs
# -----------------

# Compose mail using an existing Emacs session (or start a new one).
set editor="/usr/bin/emacsclient -a emacs"

# How to print things
set print_command="muttprint -p - > ~/inbox/muttprint.ps"

# Use the Little Brother Database to look up addresses (see also ~/.lbdbrc).
set query_command="lbdbq '%s'"

# Use esmtp to forward outgoing mail to the relevant SMTP server.
#set sendmail="/usr/bin/esmtp -v -X /tmp/esmtp.log"


# Appearance
# ----------

# Highlight entire line instead of using ->.
unset arrow_cursor

# Number of lines to show in the pager.
set pager_index_lines=6

# Virtual lines to pad blank lines in the pager.
set tilde

# Format of the index.
set index_format="%4C %Z %{%m.%d} %-15.15F (%4c) %s"

# Display a + on wrapped lines.
set markers=yes

# Default sorting method.
set sort=threads

# Do not show help lines.
set nohelp

# Show progress when reading a mailbox.
set read_inc=25

# Show progress while writing mailboxes.
set write_inc=25

# Enable Display of UTF-8 Characters.
set charset=utf-8

# I don't care about whether a message is old.
set nomark_old



# Behavior
# --------

# Don't start editor immediately when composing.
set autoedit=no

# Don't ask me if i want to append.
set noconfirmappend

# Prompt when creating new files.
set confirmcreate

# Always save a copy of outgoing messages?
set copy=no

# Purge deleted messages without asking.
set delete=yes

# Skip initial prompts when replying.
set fast_reply=yes

# When forwarding messages, set the subject to Fwd: subject.
set forw_format="Fwd: %s"

# Look up addresses in my aliases.
set reverse_alias

# Use my address as it appears in the message I am replying to.
set reverse_name

# Keep files even when no messages are left.
set save_empty

# Always use reply-to if present.
set reply_to=yes

# Always quote messages when replying.
set include

# Remove my address from reply-to list.
unset metoo

# Don't ask about moving messages, just do it.
set move=no

# Don't save outgoing attachments.
unset fcc_attach

# When replying to a message sent by me, reply to the recipients instead.
unset reply_self

# Don't move to the next message on next-page.
set pager_stop



# MIME
# ----

# Ignore HTML email if possible.
alternative_order text/enriched text/plain text/html

# Always use the mime-types defined in .mailcap.
set implicit_autoview=yes

# Use message/rfc822 type to forward messages.
set mime_forward=no


# Mailing Lists
# -------------

# Reply to the list, not an individual, by default.
unset ignore_list_reply_to

# Generate Mail-Follow-To on group/lists.
set followup_to=yes


# Threading
# ---------

# Use fancy threading characters instead of plain ASCII.
unset ascii_chars

# Don't collapse threads with new messages.
set collapse_unread=no


# IMAP Settings
# -------------

# Enable caching of IMAP headers.
set header_cache = "~/.mutt-cache/headers"

# Poll for mail every mail_check seconds.
set mail_check=600

# Maximum time in seconds before polling open IMAP connections.
set imap_keepalive=60


# Displayed Headers
# -----------------

# Ignore everything not listed below.
ignore *

# Show user agent / mailer.
unignore user-agent: x-agent: x-mailer:

# Show from, date, subject, to, cc, reply-to headers.
unignore from date subject to cc reply-to:

# Display headers in this order:
hdr_order From: Reply-to: To: Cc: Subject: Date: User-Agent: X-Mailer:


# Other config files
# ------------------

# Define auto_views
source ~/config/common/mutt/auto_views

# GnuPG Encryption
source ~/config/common/mutt/crypto

# Color theme
source ~/config/common/mutt/colors

# Email aliases
source ~/config/private/mutt/aliases
