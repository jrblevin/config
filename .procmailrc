MAILDIR=$HOME/Maildir
LOGFILE=$MAILDIR/procmail.log
SPAM=$MAILDIR/.spam/

:0fw
| /usr/bin/bmf -p

:0
* ^X-Spam-Status: Yes
{
    LOG="SPAM (bmf) "
    :0:
    $SPAM
}

:0
* ^TO_jrb11@acpub.duke.edu
{
    LOG="SPAM (acpub) "
    :0:
    $SPAM
}

:0
* GB2312
* !^From:.*\.osu\.edu
{
    LOG="SPAM (GB2312) "
    :0:
    $SPAM
}

:0
* iso-2022-jp
* !^From:.*\.osu\.edu
{
    LOG="SPAM (iso-2022-jp)"
    :0:
    $SPAM
}
