MAILDIR=$HOME/Maildir
LOGFILE=$HOME/Maildir/procmail.log
SPAM=$MAILDIR/.spam

:0fw
| /usr/bin/bmf -p

:0
* ^X-Spam-Status: Yes
{
    LOG="Flagged as spam by bmf. Moving to spam."
    :0:
    $SPAM
}

:0
* ^TO_jrb11@acpub.duke.edu
{
    LOG="Mail addressed to jrb11@acpub.duke.edu. Moving to spam."
    :0:
    $SPAM
}

:0
* GB2312
{
    LOG="Found GB2312 in the header. Moving to spam."
    :0:
    $SPAM
}

:0 B
* ^content-type.*(^.*)?charset=.*GB2312
{
    LOG="Found GB2312 content-type in the body. Moving to spam."
    :0:
    $SPAM
}

:0
* iso-2022-jp
{
    LOG="Found iso-2022-jp in the header. Moving to spam."
    :0:
    $SPAM
}
