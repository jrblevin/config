MAILDIR=$HOME/Maildir
LOGFILE=$HOME/Maildir/procmail.log
SPAM=$MAILDIR/.spam

:0fw
| /usr/bin/bmf -p

:0
* ^X-Spam-Status: Yes
{
    LOG="SPAM (bmf) "
    :0:
    $SPAM
}

:0
* ^TO_jrb11@acpub.duke.edu
{
    LOG="SPAM (acpub) "
    :0:
    $SPAM
}

:0
* GB2312
{
    LOG="SPAM (GB2312) "
    :0:
    $SPAM
}

:0 B
* ^content-type.*(^.*)?charset=.*GB2312
{
    LOG="SPAM (GB2312, body) "
    :0:
    $SPAM
}

:0
* iso-2022-jp
{
    LOG="SPAM (iso-2022-jp)"
    :0:
    $SPAM
}
