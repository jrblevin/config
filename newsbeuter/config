# ~/.newsbeuter/config

# Choose browser based on context (console, X, etc.).
browser sensible-browser

# Keep at most 500 items per feed
max-items 500

# On exit, remove items for feeds no longer subscribed to.
cleanup-on-quit yes

# Keybindings
bind-key  k           up
bind-key  j           down
bind-key  BACKSPACE   pageup

# Automatic reloading
auto-reload yes
reload-time 30
reload-threads 4
